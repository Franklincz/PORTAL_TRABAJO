    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->
            <div class="text-center">
                    <img src="@Model.Foto" class="avatar img-circle img-thumbnail" alt="avatar">
                    @*<h6>Upload a different photo...</h6>
                    <input type="file" class="text-center center-block file-upload">*@
