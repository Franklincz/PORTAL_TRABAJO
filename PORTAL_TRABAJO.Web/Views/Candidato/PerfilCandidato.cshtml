            </ul>



        </div><!--/col-3-->
        <div class="col-sm-9">



            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" action="##" method="post" id="registrationForm">
                        <div class="form-group">

                            <div class="col-xs-6">

                                <h4 class="text-white">Nombres</h4>
                                <label>@Model.Nombres</label>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">

                                <h4 class="text-white">Apellidos</h4>
                                <label>@Model.Apellidos</label>
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <h4 class="text-white">Telefono</h4>
                                <label>@Model.Telefono</label>

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <h4 class="text-white">Fecha de nacimiento</h4>
                                <label>@Model.Fechanacim</label>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <h4 class="text-white">Mi descripción</h4>
                                <label>@Model.Descrpperfil</label>
                            </div>
                        </div>




                    </form>

                    <hr>



                </div><!--/tab-pane-->


            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    </div><!--/col-9-->
</div><!--/row-->
