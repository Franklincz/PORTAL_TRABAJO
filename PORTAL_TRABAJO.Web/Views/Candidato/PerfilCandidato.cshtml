                <li class="list-group-item text-right"><span class="pull-left"><strong>@Html.ActionLink("EXPERIENCIA LABORAL", "IndexExpLaboral", "explabcand")</strong>
                <li class="list-group-item text-right"><span class="pull-left"><strong>@Html.ActionLink("FORMACIÓN ACADÉMICA", "IndexFormAcademic", "formaccand")</strong>
